{
    "name": "unix-file-stats",
    "displayName": "Unix File Stats",
    "description": "Show file stats (size and permissions) on the statusbar for unix like systems.",
    "version": "0.5.0",
    "publisher": "arturock",
    "author": {
        "name": "Arturo Rodr√≠guez",
        "url": "https://github.com/artrz"
    },
    "license": "GPL-3.0-only",
    "homepage": "https://github.com/artrz/vsx-unix-file-stats/blob/master/README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/artrz/vsx-unix-file-stats"
    },
    "bugs": {
        "url": "https://github.com/artrz/vsx-unix-file-stats/issues"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "filesize",
        "permissions",
        "stats",
        "unix",
        "linux",
        "multi-root ready"
    ],
    "icon": "resources/logo.png",
    "galleryBanner": {
        "color": "#045aa6",
        "theme": "dark"
    },
    "engines": {
        "vscode": "^1.70.0"
    },
    "activationEvents": [
        "onFileSystem:file"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "configuration": {
            "title": "Unix file stats",
            "properties": {
                "fileStats.size.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Displays the file size on the status bar."
                },
                "fileStats.size.position": {
                    "type": "string",
                    "enum": [
                        "left",
                        "right"
                    ],
                    "enumDescriptions": [
                        "Align to the left",
                        "Align to the right"
                    ],
                    "default": "right",
                    "description": "Sets the position of the file size status item."
                },
                "fileStats.size.priority": {
                    "type": "number",
                    "default": 0,
                    "description": "A higher number means nearer to the left."
                },
                "fileStats.permissions.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Displays the file permissions on the status bar."
                },
                "fileStats.permissions.position": {
                    "type": "string",
                    "enum": [
                        "left",
                        "right"
                    ],
                    "enumDescriptions": [
                        "Align to the left",
                        "Align to the right"
                    ],
                    "default": "right",
                    "description": "Sets the position of the file permissions status item."
                },
                "fileStats.permissions.priority": {
                    "type": "number",
                    "default": 0,
                    "description": "A higher number means nearer to the left."
                },
                "fileStats.permissions.format": {
                    "type": "string",
                    "enum": [
                        "numbers",
                        "letters"
                    ],
                    "enumDescriptions": [
                        "Show permissions as numbers",
                        "Show permissions as letters"
                    ],
                    "default": "letters",
                    "description": "Sets the permissions format."
                },
                "fileStats.permissions.warnReadonly": {
                    "type": "boolean",
                    "default": true,
                    "description": "Shows the permissions menu item with a warning background when file in not writeable."
                },
                "fileStats.hints.basenameOnly": {
                    "type": "boolean",
                    "default": true,
                    "description": "Displays only the resource's basename when requesting the permissions."
                },
                "fileStats.hints.maxNames": {
                    "type": "integer",
                    "default": 5,
                    "description": "The maximum names to display when requesting the permissions. If more items than this value are selected, they will appear as ' and X more'."
                }
            }
        },
        "commands": [
            {
                "command": "unix-file-stats.changePermissions",
                "title": "Change file permissions..."
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "when": "resourceScheme == file && !explorerResourceIsFolder",
                    "command": "unix-file-stats.changePermissions",
                    "group": "7_modification@4"
                }
            ],
            "commandPalette": [
                {
                    "command": "unix-file-stats.changePermissions",
                    "when": "false"
                }
            ]
        }
    },
    "scripts": {
        "init": "lefthook install",
        "lint": "eslint src",
        "lint-fix": "npm run lint -- --fix",
        "ts:check": "tsc --noEmit",
        "ts:compile": "tsc -p ./",
        "qa": "npm run ts:check && npm run lint",
        "compile": "node esbuild.js",
        "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
        "watch:esbuild": "node esbuild.js --watch",
        "watch-tests": "tsc -watch -p ./",
        "pretest": "npm run ts:compile",
        "test": "vscode-test",
        "vscode:prepublish": "npm run qa && npm run compile",
        "pub:bump": "vsce package && rm -v *.vsix && npx @favware/cliff-jumper",
        "pub:debump": "git reset --soft HEAD~1 ; git tag --delete",
        "pub:release": "git push origin main && git push --tags"
    },
    "devDependencies": {
        "@eslint/js": "^9.37.0",
        "@favware/cliff-jumper": "^6.0.0",
        "@stylistic/eslint-plugin": "^5.4.0",
        "@types/mocha": "^10.0.10",
        "@types/node": "~22.17.2",
        "@types/vscode": "~1.70.0",
        "@typescript-eslint/eslint-plugin": "^8.45.0",
        "@typescript-eslint/parser": "^8.45.0",
        "@vscode/test-cli": "^0.0.11",
        "@vscode/test-electron": "^2.5.2",
        "esbuild": "^0.25.10",
        "eslint": "^9.37.0",
        "lefthook": "^1.13.6",
        "typescript": "~5.8.3",
        "typescript-eslint": "^8.45.0"
    },
    "dependencies": {
        "sudo-prompt": "^9.2.1"
    }
}
